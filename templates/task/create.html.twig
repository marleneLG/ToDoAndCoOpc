{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">Créer une nouvelle tâche</h2>

    {{ form_start(form, {'action' : path('task_create')}) }}

    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_label(form.title)}}
            {{ form_widget(form.title) }}
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_label(form.content)}}
            {{ form_widget(form.content) }}
        </div>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-success pull-right">Ajouter</button>
    </div>

    {{ form_end(form) }}

    <a href="{{ path('task_list') }}" class="btn btn-primary mt-3">Retour à la liste des tâches</a>
</div>
{% endblock %}